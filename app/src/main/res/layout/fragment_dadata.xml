<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.main.DadataFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/vBarrier8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:barrierDirection="left"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:text="@string/hello_blank_fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/vBarrier8dp"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/DadataEditText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="32dp"
        android:layout_marginTop="40dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="@string/enter_address_hint"
        android:inputType="text"
        android:minHeight="48dp"
        android:text="@string/moskwa_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/vBarrier8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dadataFragmentRv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="6"
        app:layout_constraintEnd_toEndOf="@+id/DadataEditText"
        app:layout_constraintStart_toStartOf="@+id/DadataEditText"
        app:layout_constraintTop_toBottomOf="@+id/DadataEditText" />

    <Button
        android:id="@+id/fragment_dadata_btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="80dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/search_caption"
        app:layout_constraintEnd_toEndOf="@+id/dadataFragmentRv"
        app:layout_constraintStart_toStartOf="@+id/dadataFragmentRv"
        app:layout_constraintTop_toBottomOf="@+id/dadataFragmentRv" />

</androidx.constraintlayout.widget.ConstraintLayout>